@model IEnumerable<ECommerceAMY.Models.Category>
@{
    ViewData["Title"] = "Manage Categories";
}
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="h2"><i class="bi bi-tag"></i> Categories</h1>
        <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-circle"></i> Create Category</a>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td><strong>@c.Name</strong></td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@c.Id"><i class="bi bi-pencil"></i> Edit</a>
                                <form method="post" asp-action="Delete" asp-route-id="@c.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this category?');"><i class="bi bi-trash"></i> Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
