@model ECommerceAMY.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}

<div class="page-header mb-4">
    <h1 class="h2"><i class="bi bi-pencil-square"></i> Edit Category</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                        <input asp-for="Name" class="form-control form-control-lg" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="mt-4 pt-3 border-top">
                        <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-check-circle"></i> Update</button>
                        <a class="btn btn-secondary btn-lg" asp-action="Index"><i class="bi bi-x-circle"></i> Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
