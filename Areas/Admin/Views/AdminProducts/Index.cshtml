@model IEnumerable<ECommerceAMY.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
}
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="h2"><i class="bi bi-box-seam"></i> Products</h1>
        <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-circle"></i> Create Product</a>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td><strong>@p.Name</strong></td>
                            <td><span class="badge text-bg-secondary">@p.Category?.Name</span></td>
                            <td><span class="text-success fw-bold">@p.Price.ToString("C")</span></td>
                            <td>
                                @if (p.Stock > 0)
                                {
                                    <span class="badge text-bg-success">@p.Stock</span>
                                }
                                else
                                {
                                    <span class="badge text-bg-danger">Out of Stock</span>
                                }
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@p.Id"><i class="bi bi-pencil"></i> Edit</a>
                                <form method="post" asp-action="Delete" asp-route-id="@p.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this product?');"><i class="bi bi-trash"></i> Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
