@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-banner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4"><span class="gradient-text">ECommerceAMY</span></h1>
                <p class="lead mb-4">Your premium shopping destination with cutting-edge features and amazing products</p>
                <div class="d-flex gap-3 flex-wrap">
                    <a class="btn btn-light btn-lg floating-cart" asp-controller="Products" asp-action="Index">
                        <i class="bi bi-shop"></i> Browse Products
                    </a>
                    <a class="btn btn-outline-light btn-lg" asp-controller="Products" asp-action="Index">
                        <i class="bi bi-star"></i> Featured Items
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="glass-effect p-4 rounded-4">
                    <h3 class="mb-3"><i class="bi bi-truck"></i> Fast Delivery</h3>
                    <p>Free shipping on orders over $50</p>
                </div>
                <div class="glass-effect p-4 rounded-4 mt-3">
                    <h3 class="mb-3"><i class="bi bi-shield-check"></i> Secure Payment</h3>
                    <p>100% secure transactions</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <div class="mb-3">
                    <i class="bi bi-phone display-4 text-primary"></i>
                </div>
                <h4>Mobile Friendly</h4>
                <p>Shop seamlessly from any device</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <div class="mb-3">
                    <i class="bi bi-gift display-4 text-primary"></i>
                </div>
                <h4>Great Deals</h4>
                <p>Exclusive offers and discounts</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <div class="mb-3">
                    <i class="bi bi-headset display-4 text-primary"></i>
                </div>
                <h4>24/7 Support</h4>
                <p>Always here to help you</p>
            </div>
        </div>
    </div>
</div>
