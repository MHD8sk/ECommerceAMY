<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceAMY</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceAMY.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bag"></i>
                    ECommerceAMY
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Products</a></li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="History">Orders</a></li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link text-dark fw-bold text-danger" asp-area="Admin" asp-controller="Admin" asp-action="Index"><i class="bi bi-shield-lock"></i> Admin</a></li>
                        }
                    </ul>
                    <form class="d-flex me-3" method="get" asp-controller="Products" asp-action="Index" role="search">
                        <input class="form-control" type="search" name="q" placeholder="Search products" aria-label="Search">
                    </form>
                    @await Component.InvokeAsync("CartSummary")
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-5">
        <div class="container py-4">
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3"><i class="bi bi-bag"></i> ECommerceAMY</h6>
                    <p class="text-muted small">Your trusted online shopping destination with quality products and seamless checkout.</p>
                </div>
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a class="text-muted text-decoration-none small" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="text-muted text-decoration-none small" asp-controller="Products" asp-action="Index">Products</a></li>
                        <li><a class="text-muted text-decoration-none small" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">Contact</h6>
                    <p class="text-muted small">Email: support@ecommerceamy.local<br>Support: 24/7 Available</p>
                </div>
            </div>
            <hr class="my-3">
            <div class="text-center text-muted small">
                &copy; 2025 ECommerceAMY. All rights reserved.
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_Toasts" />
</body>
</html>
