@model IEnumerable<ECommerceAMY.Models.Product>

<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-3">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm product-card">
                <div class="product-shine">
                    <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "https://via.placeholder.com/300x200?text=Product" : product.ImageUrl)" 
                         class="card-img-top" alt="@product.Name" />
                    @if (product.Stock < 10)
                    {
                        <span class="position-absolute top-0 end-0 m-2 badge bg-warning">
                            <i class="bi bi-exclamation-triangle"></i> Low Stock
                        </span>
                    }
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">
                        <span class="badge rounded-pill text-bg-secondary">@product.Category?.Name</span>
                        @if (product.Stock > 0)
                        {
                            <span class="badge bg-success ms-1">In Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-danger ms-1">Out of Stock</span>
                        }
                    </p>
                    <p class="card-text">@(product.Description?.Length > 120 ? product.Description.Substring(0,120) + "..." : product.Description)</p>
                    
                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <span class="price-tag">@product.Price.ToString("C")</span>
                        <div class="d-flex gap-2">
                            <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@product.Id">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <button class="btn btn-outline-danger btn-sm wishlist-btn" data-product-id="@product.Id">
                                <i class="bi bi-heart"></i>
                            </button>
                            @if (User.Identity?.IsAuthenticated ?? false && product.Stock > 0)
                            {
                                <form asp-controller="Cart" asp-action="Add" method="post">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-primary btn-sm pulse-badge">
                                        <i class="bi bi-cart-plus"></i> Add
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
