@using Microsoft.AspNetCore.Identity
@using ECommerceAMY.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <span class="navbar-text me-2">Hello @User.Identity?.Name!</span>
    </li>
    <li class="nav-item">
        <button id="themeToggle" class="btn btn-link nav-link text-dark" type="button" title="Toggle theme"><i class="bi bi-brightness-high"></i></button>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <button id="themeToggle" class="btn btn-link nav-link text-dark" type="button" title="Toggle theme"><i class="bi bi-brightness-high"></i></button>
    </li>
    <li class="nav-item"><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    <li class="nav-item"><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
}
</ul>
