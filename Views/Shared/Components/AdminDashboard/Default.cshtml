@model ECommerceAMY.ViewModels.AdminDashboardViewModel

<!-- Overview Cards -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm feature-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-gradient rounded-3 p-3">
                            <i class="bi bi-cart-check text-white fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Orders</h6>
                        <h3 class="mb-0">@Model.TotalOrders.ToString("N0")</h3>
                        <small class="text-success">
                            <i class="bi bi-arrow-up"></i> +12% from last month
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm feature-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-gradient rounded-3 p-3">
                            <i class="bi bi-currency-dollar text-white fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Revenue</h6>
                        <h3 class="mb-0">@Model.TotalRevenue.ToString("C")</h3>
                        <small class="text-success">
                            <i class="bi bi-arrow-up"></i> +8% from last month
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm feature-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-gradient rounded-3 p-3">
                            <i class="bi bi-people text-white fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Customers</h6>
                        <h3 class="mb-0">@Model.TotalCustomers.ToString("N0")</h3>
                        <small class="text-success">
                            <i class="bi bi-arrow-up"></i> +15% from last month
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm feature-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-gradient rounded-3 p-3">
                            <i class="bi bi-box text-white fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Products</h6>
                        <h3 class="mb-0">@Model.TotalProducts.ToString("N0")</h3>
                        <small class="text-info">
                            <i class="bi bi-plus"></i> @Model.LowStockProducts.Count low stock
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Analytics -->
<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">
                    <i class="bi bi-graph-up text-primary"></i> Revenue Overview
                </h5>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" height="100"></canvas>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">
                    <i class="bi bi-pie-chart text-success"></i> Top Categories
                </h5>
            </div>
            <div class="card-body">
                <canvas id="categoryChart" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle text-warning"></i> Pending Orders
                </h5>
            </div>
            <div class="card-body">
                <h2 class="text-warning">@Model.PendingOrders</h2>
                <p class="text-muted mb-0">Awaiting payment</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history text-info"></i> Recent Orders
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Order #</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Total</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentOrders.Any())
                            {
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td><strong>@order.Id</strong></td>
                                        <td>@order.User?.Email</td>
                                        <td>@order.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                                        <td>@order.Total.ToString("C")</td>
                                        <td>
                                            @if (order.Status == ECommerceAMY.Models.OrderStatus.Pending)
                                            {
                                                <span class="badge text-bg-warning">Pending</span>
                                            }
                                            else if (order.Status == ECommerceAMY.Models.OrderStatus.Paid)
                                            {
                                                <span class="badge text-bg-info">Paid</span>
                                            }
                                            else
                                            {
                                                <span class="badge text-bg-success">Shipped</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-3">No recent orders</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Low Stock Alerts -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle text-warning"></i> Low Stock Alerts
                </h5>
            </div>
            <div class="card-body">
                @if (!Model.LowStockProducts.Any())
                {
                    <div class="text-center py-3">
                        <i class="bi bi-check-circle text-success display-4"></i>
                        <p class="mb-0 text-muted">All products are well stocked!</p>
                    </div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var product in Model.LowStockProducts.Take(5))
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@product.Name</h6>
                                    <small class="text-muted">Stock: @product.Stock units</small>
                                </div>
                                <span class="badge bg-warning rounded-pill">
                                    <i class="bi bi-exclamation-triangle"></i> Low
                                </span>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Top Products -->
<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">
                    <i class="bi bi-star text-warning"></i> Top Performing Products
                </h5>
            </div>
            <div class="card-body">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3">
                    @foreach (var product in Model.TopProducts.Take(4))
                    {
                        <div class="col">
                            <div class="card border-0 h-100">
                                <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "https://via.placeholder.com/200x150?text=Product" : product.ImageUrl)" 
                                     class="card-img-top" alt="@product.ProductName" />
                                <div class="card-body">
                                    <h6 class="card-title">@product.ProductName</h6>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">@product.UnitsSold sold</small>
                                        <span class="badge bg-success rounded-pill">
                                            @product.GrowthRate.ToString("F1")%
                                        </span>
                                    </div>
                                    <div class="mt-2">
                                        <small class="text-muted">Revenue: </small>
                                        <strong>@product.Revenue.ToString("C")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Revenue Chart
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    new Chart(revenueCtx, {
        type: 'line',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.MonthlySales.Select(m => m.Month))),
            datasets: [{
                label: 'Revenue',
                data: @Html.Raw(Json.Serialize(Model.MonthlySales.Select(m => m.Revenue))),
                borderColor: 'rgb(102, 126, 234)',
                backgroundColor: 'rgba(102, 126, 234, 0.1)',
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false }
            }
        }
    });

    // Category Chart
    const categoryCtx = document.getElementById('categoryChart').getContext('2d');
    new Chart(categoryCtx, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.TopCategories.Select(c => c.CategoryName))),
            datasets: [{
                data: @Html.Raw(Json.Serialize(Model.TopCategories.Select(c => c.Revenue))),
                backgroundColor: [
                    '#667eea', '#764ba2', '#f093fb', '#f5576c', '#4facfe'
                ]
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'bottom' }
            }
        }
    });
</script>
