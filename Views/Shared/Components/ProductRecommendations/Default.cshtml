@model IEnumerable<ECommerceAMY.Models.Product>

@if (Model.Any())
{
    <div class="mb-4">
        <h4 class="mb-3">
            <i class="bi bi-stars text-warning"></i> 
            Frequently Bought Together
        </h4>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm product-card">
                        <div class="product-shine">
                            <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "https://via.placeholder.com/300x200?text=Product" : product.ImageUrl)" 
                                 class="card-img-top" alt="@product.Name" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title">@product.Name</h6>
                            <div class="mt-auto">
                                <span class="price-tag small">@product.Price.ToString("C")</span>
                                <a class="btn btn-outline-primary btn-sm w-100 mt-2" 
                                   asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
