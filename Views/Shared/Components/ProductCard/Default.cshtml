@model ECommerceAMY.Models.Product

<div class="card h-100 shadow-sm product-card">
    <div class="product-shine">
        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/300x200?text=Product" : Model.ImageUrl)" 
             class="card-img-top" alt="@Model.Name" />
        @if (Model.Stock < 10)
        {
            <span class="position-absolute top-0 end-0 m-2 badge bg-warning">
                <i class="bi bi-exclamation-triangle"></i> Low Stock
            </span>
        }
    </div>
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            <span class="badge rounded-pill text-bg-secondary">@Model.Category?.Name</span>
            @if (Model.Stock > 0)
            {
                <span class="badge bg-success ms-1">In Stock</span>
            }
            else
            {
                <span class="badge bg-danger ms-1">Out of Stock</span>
            }
        </p>
        <p class="card-text">@(Model.Description?.Length > 120 ? Model.Description.Substring(0,120) + "..." : Model.Description)</p>
        
        <!-- Star Rating Placeholder -->
        <div class="mb-2">
            <span class="text-warning">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-half"></i>
                <i class="bi bi-star"></i>
            </span>
            <small class="text-muted">(4.5)</small>
        </div>
        
        <div class="mt-auto d-flex justify-content-between align-items-center">
            <span class="price-tag">@Model.Price.ToString("C")</span>
            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@Model.Id">
                    <i class="bi bi-eye"></i> View
                </a>
                <button class="btn btn-outline-danger btn-sm wishlist-btn" data-product-id="@Model.Id">
                    <i class="bi bi-heart"></i>
                </button>
                @if (User.Identity?.IsAuthenticated ?? false && Model.Stock > 0)
                {
                    <form asp-controller="Cart" asp-action="Add" method="post">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="btn btn-primary btn-sm pulse-badge">
                            <i class="bi bi-cart-plus"></i> Add
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
