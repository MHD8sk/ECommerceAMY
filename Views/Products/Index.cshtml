@model IEnumerable<ECommerceAMY.Models.Product>
@{
    ViewData["Title"] = "Products";
    var categories = ViewBag.Categories as List<ECommerceAMY.Models.Category> ?? new();
    var selectedCategoryId = (string?)Context.Request.Query["categoryId"];
    var searchText = (string?)Context.Request.Query["q"];
}
<h2 class="mb-3">Products</h2>
<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <select class="form-select" name="categoryId">
            <option value="">All Categories</option>
            @foreach (var c in categories)
            {
                <option value="@c.Id" selected="@(selectedCategoryId == c.Id.ToString())">@c.Name</option>
            }
        </select>
    </div>
    <div class="col-auto">
        <input type="text" class="form-control" name="q" value="@searchText" placeholder="Search..." />
    </div>
    <div class="col-auto">
        <button class="btn btn-primary" type="submit">Filter</button>
    </div>
</form>

<div class="row row-cols-1 row-cols-md-3 g-4">
@foreach (var p in Model)
{
    <div class="col">
        <div class="card h-100 shadow-sm product-card">
            <div class="product-shine">
                <img src="@(string.IsNullOrEmpty(p.ImageUrl) ? "https://via.placeholder.com/300x200?text=Product" : p.ImageUrl)" class="card-img-top" alt="@p.Name" />
            </div>
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@p.Name</h5>
                <p class="card-text"><span class="badge rounded-pill text-bg-secondary">@p.Category?.Name</span></p>
                <p class="card-text">@(p.Description?.Length > 120 ? p.Description.Substring(0,120) + "..." : p.Description)</p>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                    <span class="price-tag">@p.Price.ToString("C")</span>
                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@p.Id"><i class="bi bi-eye"></i> View</a>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <form asp-controller="Cart" asp-action="Add" method="post">
                                <input type="hidden" name="productId" value="@p.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-primary pulse-badge"><i class="bi bi-cart-plus"></i> Add</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</div>
